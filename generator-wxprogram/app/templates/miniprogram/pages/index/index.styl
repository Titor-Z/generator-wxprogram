/**index.wxss**/
page {
  background: #f1f1f1;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-top: 8vh;
}

.head {
  height: 48rpx;
  margin-top: 64rpx;
}

.head-title {
  font-size: 40rpx;
}

.version {
  font-size: 20rpx;
  background: #FFDA53;
  border-radius: 20rpx;
  width: 60rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  display: inline-block;
  margin-left: 8rpx;
}

.label {
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  display: block;
  color: #ffffff;
  padding: 0 24rpx;
  border-radius: 32rpx;
  background: #FFB4C4;
  margin-top: 16rpx;
}

.motto,
.info {
  line-height: 34rpx;
  font-size: 24rpx;
  text-align: center;
}

.motto {
  width: 512rpx;
  color: #333232;
  margin-top: 64rpx;
}

.footer {
  width: 100%;
  height: 400rpx;
  position: absolute;
  bottom: 0;
  text-align: center;
  display: flex;
  overflow: hidden;
}

.footer image {
  width: 100%;
  display: block;
  align-items: center;
}